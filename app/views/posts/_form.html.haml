= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .fields
    = f.label :name
    %br/
    = f.text_field :name
    %br/
    = f.label :message
    %br/
    = f.text_area :message
  .actions
    = f.submit
